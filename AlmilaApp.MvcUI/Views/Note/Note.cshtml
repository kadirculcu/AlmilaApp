            @Html.TextBoxFor(m => m.Note.LessonId, new { @class = "form-control input-lg" })
            @Html.ValidationMessageFor(m => m.Note.LessonId, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Note.StudentId, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Note.StudentId, new { @class = "form-control input-lg" })
            @Html.ValidationMessageFor(m => m.Note.StudentId, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn btn-primary">Ekle</button>
    </form>
}

